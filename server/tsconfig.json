{
  "compilerOptions": 
  {
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "./src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
  },
  "lib": ["ES2022"],
  "exclude": 
  [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "ts-node": 
  {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
}